{% extends 'base.html.twig' %}

{% block title %}Opérations{% endblock %}

{% block body %}
    <h1>Opérations</h1>
    <div id="v-account" data-vue-account data-account="{{ account }}"></div>
    <a href="{{ path('transaction_new', {'account': account}) }}"  class="btn btn-primary" data-bs-toggle="modal-dynamic" data-bs-target="#clue-modal" role="button">Ajouter une opération</a>
    <table  class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Libélé</th>
                <th  class="text-end">Montant</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="v-transactions" data-vue-transactions data-account="{{ account }}"></tbody>
    </table>
{% endblock %}
