            <table class="table table-striped table-sm table-responsive mt-2">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Libélé</th>
                        <th  class="text-end">Montant</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody {{ vue_component('Transactions', { 'account': account.id }) }}</tbody>
            </table>
        </div>
    </div>

{% endblock %}
