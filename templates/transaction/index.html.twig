{% extends 'base.html.twig' %}

{% block title %}{{ account.name }}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header sticky-top top-nav text-bg-light">
            <div id="v-account" data-vue-account data-account="{{ account.id }}"></div>
            <nav class="nav bg-body-tertiary nav-pills">
                <div class="nav-link">
                    <a href="{{ path('transaction_new', {'account': account.id }) }}" class="btn btn-sm btn-primary" data-bs-toggle="modal-dynamic" data-bs-target="#clue-modal" role="button">Nouvelle opération</a>
                </div>
                <div class="nav-link">
                    <div id="v-search" data-vue-search data-list="transaction"></div>
                </div>
            </nav>
        </div>
        <div class="card-body">

            <table class="table table-striped table-sm table-responsive mt-2">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Libélé</th>
                        <th  class="text-end">Montant</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="v-transactions" data-vue-transactions data-account="{{ account.id }}"></tbody>
            </table>
        </div>
    </div>

{% endblock %}
