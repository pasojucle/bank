{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header sticky-top top-nav text-bg-light">
        <h1>Catégories</h1>
        <nav class="nav bg-body-tertiary nav-pills">
            <div class="nav-link px-0">
                <a href="{{ path('category_new') }}"  class="btn btn-sm btn-primary" data-bs-toggle="modal-dynamic" data-bs-target="#clue-modal" role="button"><i class="bi bi-plus-lg d-sm-none"></i><span class="d-none d-sm-block ms-2">Nouvelle catégorie</span></a>
            </div>
            <div class="nav-link ms-auto">
                <div id="v-search-filter" data-vue-search-filter></div>
            </div>
        </nav> 
    </div>
    <div class="card-body">
        <table  class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="v-categories" data-vue-categories></tbody>
        </table>
    </div>
</div>    
{% endblock %}
