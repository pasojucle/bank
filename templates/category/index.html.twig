{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header sticky-top top-nav text-bg-light">
        <h1>Catégories</h1>
    </div>
    <div class="card-body">
        <a href="{{ path('category_new') }}"  class="btn btn-primary" data-bs-toggle="modal-dynamic" data-bs-target="#clue-modal" role="button">Ajouter une catégorie</a>
        <table  class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="v-categories" data-vue-categories></tbody>
        </table>
    </div>
</div>    
{% endblock %}
